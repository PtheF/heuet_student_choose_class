/* pages/selectClass/selectClass.wxss */

view.select-app{
    width: 100vw;
    height: 100vh;
    background-image: url("http://49.232.218.190/bg3.png"); 
    background-size: 100%;
     background-repeat: no-repeat;
     overflow: hidden;
}

view.select-body{
    width: 100%;
    height: 90%;
    overflow-y: auto;
}

view.select-title{
    font-size: 24px;
    font-weight: 700;
    margin: 8px auto 0;
    display: flex;
    padding: 0 10px 0 10px;
    border-bottom: 2px solid grey;

    justify-content: space-around;
}

button.my{
    width: 100px !important;
    height: 30px;
    display: block;
    border: 1px solid grey;
    padding: 0;
    margin: 0 !important;
    font-size: 14px;
    line-height: 30px;
}

view.h2{
    color: #4588f8;
    margin: 20px 0 0 20px;
}

view.cls-list{
    margin: 10px auto 0;
    width: 280px;
    /* border: 1px solid grey; */
}

view.cls{
    border-radius: 10px;
    box-shadow: 2px 2px 3px grey;
    overflow: hidden;
    border-left: 1px solid rgb(206, 206, 206);
    border-top: 1px solid rgb(196, 196, 196);
    padding: 7px;
    margin-top: 12px;

    background-color: rgba(255, 255, 255, 0.8);
}

view.cls-name{
    font-weight: 700;
    font-size: 14px;
    margin-bottom: 5px;
}

view.info-row{
    display: flex;
    font-size: 13px;
    color: grey;
}

view.info{
    width: 50%;
}