<view class="home-app">

    <image src="https://www.heuet.edu.cn/images/logo.png" style="width: 100%; height: 120px;"/>

    <view class="user-info">
        <view class="avatar"></view>

        <view class="info-list">

            <view class="h2">学生信息</view>

            <view class="info">
                <text>学号:</text>
                <text>{{user.id}}</text>
            </view>

            <view class="info">
                <text>姓名:</text>
                <text>{{user.name}}</text>
            </view>

            <view class="info">
                <text>性别:</text>
                <text>{{user.gender}}</text>
            </view>

            <view class="info">
                <text>班号:</text>
                <text>{{user.clsNo}}</text>
            </view>
        </view>

        <button class="back" bindtap="back">返回</button>
    </view>
</view>
